
 # Set terminal window title
if [[ $COLOR_TERM ]]; then
    PROMPT_COMMAND='echo -ne "\033]0;${USER}@${HOSTNAME} `dirs -0` \007"'
fi
export EDITOR=vim

alias ja=LC_ALL=ja_JP.UTF-8
alias en=LC_ALL=en_US.UTF-8
alias ja7z='LC_ALL=ja_JP.UTF-8 wine ~/.wine/drive_c/Program\ Files\ \(x86\)/7-Zip/7z.exe'
alias sjiscat='iconv -f sjis -t utf8'

alias ..='cd ..'

function cg {
    cd ~/stash/git/$1
}

function bashrc {
    vim ~/.bashrc_mine
    source ~/.bashrc_mine
}

export HISTCONTROL=erasedups

PS1='${debian_chroot:+($debian_chroot)}\[\e[01;32m\]\u@\h\[\e[01;34m\] \w \$\[\e[01;36m\] '
